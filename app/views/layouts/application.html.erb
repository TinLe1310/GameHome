<!DOCTYPE html>
<html>
  <head>
    <title>GameHome</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%# <%= javascript_importmap_tags %>
    <script src="https://js.stripe.com/v3"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
  </head>


  <body>
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <a class="navbar-item" href="<%= root_path %>">
          Home
        </a>
        <a class="navbar-item" href="<%= about_page_path(@about_page) %>">
          About Us
        </a>
        <a class="navbar-item" href="<%= genres_path %>">
          Genres
        </a>
        <a class="navbar-item" href="<%= contact_page_path(@contact_page) %>">
          Contact Us
        </a>
      </div>
      <div class="navbar-menu">
        <div class="navbar-end">
          <button class="button is-primary js-modal-trigger" data-target="cart">
            Cart
            <% if cart.present? %>
              <sup>(<%= cart.size %>)</sup>
            <% end %>
          </button>

        </div>

        <!-- Cart Modal-->
        <div id="cart" class="modal">
          <div class="modal-background"></div>
          <div class="modal-content">
            <div class="box">
              <% if cart.present? %>
                <ul>
                  <% session[:cart_items].each do |item| %>
                    <li>
                      <%= item["game"]["title"] %>
                      <%= form_tag(cart_path(item["game"]["id"]), method: :patch) do %>
                        <%= hidden_field_tag(:id, item["game"]["id"]) %>
                        <%= number_field_tag :quantity, item["quantity"], min: 1 %>
                        <%= submit_tag "Update" %>
                      <% end %>
                      <%= button_to '❌', cart_path(item["game"]["id"]), method: :delete %>
                    </li>
                  <% end %>
                </ul>
                <%= form_with url: checkout_create_path, remote: true do %>
                  <%= button_tag 'Buy Now' %>
                <% end %>
              <% else %>
                <p>
                  No items in your cart
                </p>
              <% end %>
            </div>
          </div>
          <button class="modal-close is-large" aria-label="close"></button>
        </div>
      </div>
    </nav>
<p><%= session[:cart_items]%></p>
    <% if flash[:notice].present? %>
      <div class="notification is-primary is-light">
        <%= flash[:notice] %>
      </div>
       <meta http-equiv="refresh" content="1"> <!-- Reload the page after 5 seconds -->
    <% end %>

    <!-- Modal script -->
    <script>
      document.addEventListener('DOMContentLoaded', () => {
      // Functions to open and close a modal
      function openModal($el) {
        $el.classList.add('is-active');
      }

      function closeModal($el) {
        $el.classList.remove('is-active');
      }

      function closeAllModals() {
        (document.querySelectorAll('.modal') || []).forEach(($modal) => {
          closeModal($modal);
        });
      }

      // Event delegation to attach the event listener to a parent element
      document.body.addEventListener('click', function(event) {
        if (event.target.matches('.js-modal-trigger')) {
          openModal();
        }
      });

      // Add a click event on buttons to open a specific modal
      (document.querySelectorAll('.js-modal-trigger') || []).forEach(($trigger) => {
        const modal = $trigger.dataset.target;
        const $target = document.getElementById(modal);

        $trigger.addEventListener('click', () => {
          openModal($target);
        });
      });

      // Add a click event on various child elements to close the parent modal
      (document.querySelectorAll('.modal-background, .modal-close, .modal-card-head .delete, .modal-card-foot .button') || []).forEach(($close) => {
        const $target = $close.closest('.modal');

        $close.addEventListener('click', () => {
          closeModal($target);
        });
      });

      // Add a keyboard event to close all modals
      document.addEventListener('keydown', (event) => {
        if(event.key === "Escape") {
          closeAllModals();
        }
      });
    });
    </script>

    <%= yield %>
  </body>

  <%= render partial: 'common/footer' %>
</html>
