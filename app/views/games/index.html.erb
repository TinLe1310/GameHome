<!-- Hero section -->
<section class="hero is-primary is-bold">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Game Collections
      </h1>
      <h2 class="subtitle">
        Explore a variety of recommended games
      </h2>
    </div>
  </div>
</section>

<%= form_with(url: search_games_path, method: :get, local: true) do %>
    <div class="field is-grouped mb-5">
      <div class="control is-expanded">
        <%= text_field_tag(:keywords, nil, class: "input", placeholder: "Search For Games") %>
      </div>
      <div class="control">
        <%= select_tag :genre, options_for_select((@genres || []).unshift('All Genres'), params[:genre]), include_blank: 'Select Genre' %>
      </div>
      <div class="control">
        <%= submit_tag("Search", class:"button is-primary")%>
      </div>
    </div>
  <% end %>

<!-- Include jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Handle dropdown change event with jQuery -->
<script>
  $(document).ready(function() {
    $('#genre').change(function() {
      $('#search-form').submit();
    });
  });
</script>

<!-- Featured games section -->
<section class="section">
  <div class="container">
    <h2 class="title is-size-2">Featured Games</h2>
      <div class="columns is-multiline">
        <% @games.each do |game| %>
          <%= render partial: 'common/game', locals: { game: game } %>
        <% end %>
      </div>
  </div>
</section>