<div class="column is-one-quarter">
  <div class="card">
    <div class="card-image">
      <figure class="image is-4by3">
        <% if game.image.blank? %>
          <p>No image available</p>
        <% else %>
          <%= image_tag game.image %>
        <% end %>
      </figure>
    </div>
    <div class="card-content">
      <p class="title is-4"><%= game.title %></p>
      <p class="subtitle is-6"><%= game.release_date %></p>
      <div class="content">
        <%= "Genre".pluralize(game.genres.count) %>: <%= game.genres.map(&:name).join(", ") %>
      </div>
      <%= link_to "View Details", game, class: "button is-primary" %>
    </div>
  </div>
</div>







